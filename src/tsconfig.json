{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES6",
    "lib": ["ES2019", "DOM", "DOM.Iterable", "webworker"],
    "outDir": "../dist",
    "rootDir": ".",
    "removeComments": true,
    "strict": true,
    "typeRoots": ["../node_modules/@types"],
    "types": ["js-yaml", "three", "chart.js"],
    "esModuleInterop": true,
    "allowUmdGlobalAccess": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
